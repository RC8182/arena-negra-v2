FROM mysql:latest

ENV MYSQL_ROOT_PASSWORD=${MYSQL_ROOT_PASSWORD}
ENV MYSQL_DATABASE=${MYSQL_DATABASE}
ENV MYSQL_USER=${MYSQL_USER}
ENV MYSQL_PASSWORD=${MYSQL_PASSWORD}

# Copiar el script de inicializaci칩n de la base de datos en el directorio /docker-entrypoint-initdb.d
# Este script se ejecutar치 autom치ticamente durante el inicio del contenedor
COPY ./initial/init.sql /docker-entrypoint-initdb.d/

# Exponer el puerto 3306 para permitir la conexi칩n
EXPOSE 3306